<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-edit"></i>  Edit</h1>
      <a href="/" class="btn btn-primary">Home</a>
      <a href="/student/list" class="btn btn-secondary">Back</a>
      <form action="/student/edit/<%= student._id %>" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            type="firstName"
            id="firstName"
            name="firstName"
            class="form-control"
            placeholder="<%= student.firstName %>"
            value="<%= student.firstName %>"
          />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input
            type="lastName"
            id="lastName"
            name="lastName"
            class="form-control"
            placeholder="<%= student.lastName %>"
            value="<%= student.lastName %>"
          />
        </div>
        <div class="form-group">
          <label for="teacher">Teacher</label>
          <input
            type="teacher"
            id="teacher"
            name="teacher"
            class="form-control"
            placeholder="<%= student.teacher %>"
            value="<%= student.teacher %>"
          />
        </div>
        <div class="form-group">
          <label for="district">District</label>
          <input
            type="district"
            id="district"
            name="district"
            class="form-control"
            placeholder="<%= student.district %>"
            value="<%= student.district %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Edit Student</button>
      </form>
    </div>

    <a href='/behavior/add/<%= student._id %>'>Edit Behaviors</a> &nbsp &nbsp
    <a href='/student/delete/<%= student._id %>'>Delete Student</a> 
  </div>
</div>
</div>
